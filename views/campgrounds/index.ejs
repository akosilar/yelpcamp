<% layout('/layouts/boilerplate') %>
<div id="cluster-map"></div>
<div class="container">
  <h1>All Campgrounds</h1>

  <% campgrounds.forEach(camp => { %>
  <!-- <li><a href="/campgrounds/<%= camp._id %> "><%= camp.title %></a></li> -->
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if (camp.images.length) { %>
        <img src="<%= camp.images[0].url %>" class="img-fluid" />
        <% }else { %>
        <img
          class="img-fluid"
          src="https://th.bing.com/th/id/OIP.P4hMqm1fjUsmvuTimfmjEwHaE9?pid=ImgDet&rs=1"
          alt=""
        />
        <% } %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= camp.title %></h5>

          <p class="card-text"><%= camp.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= camp.location %> </small>
          </p>
          <a href="/campgrounds/<%= camp.id %> " class="btn btn-primary"
            >View <%= camp.title %>
          </a>
        </div>
      </div>
    </div>
  </div>
  <% }); %>
</div>
<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campgrounds = { features: <%- JSON.stringify(campgrounds) %>} 
</script>

<script src="/javascripts/clusterMap.js"></script>
