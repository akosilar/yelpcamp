<% layout('layouts/boilerplate')%>
<div class="container" d-flex justify-content-center align-items-center mt-5>
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img src="https://images.unsplash.com/photo-1533575770077-052fa2c609fc?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8M3x8Y2FtcGdyb3VuZHxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=1400&q=60" class="card-img-top" alt="">
        <div class="card-body">
          <h5 class="card-title">Register</h5>
          <form action="/register" method="POSt" class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                required
                autofocus
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">email</label>
              <input class="form-control" type="email" id="email" name="email" required />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">password</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="d-grid gap-2">
            <button class="btn btn-success">Register</button>
              </div>
          </form>
        </div>
        

      </div>
    </div>
  </div>
</div>

